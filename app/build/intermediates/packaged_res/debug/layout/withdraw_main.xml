<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e4e4e4"
        tools:context=".MainActivity"
        tools:ignore="HardcodedText">

   <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="@drawable/custom_rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:letterSpacing="0.025"
            android:text="Nyakoba Sacco Agent App"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
            android:id="@+id/logOutB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:src="@drawable/ic_logout"
            android:onClick="login"
            app:layout_constraintCircleRadius="24dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingTop="20dp"
            tools:layout_editor_absoluteY="88dp" tools:layout_editor_absoluteX="176dp"/>


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view">
            app:cardCornerRadius="28dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="28dp">





            <EditText
                    android:id="@+id/growerno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Grower No"
                    android:inputType="text"/>


                <EditText
                        android:id="@+id/idno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter ID No"
                        android:inputType="number"/>

            <Button
                    android:id="@+id/membs"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:onClick="getMemberDetails"
                    android:text="Get Member Details"/>

            <EditText
                    android:id="@+id/balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Display balance"
                    android:visibility="gone"
                    android:inputType="none"/>

            <EditText
                    android:id="@+id/membname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Display Name"
                    android:visibility="gone"
                    android:inputType="none"/>


            <EditText
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Amount"
                    android:visibility="gone"
                    android:inputType="number"/>



            <Button
                    android:id="@+id/withdrawbtns"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:onClick="submitWithdrawal"
                    android:visibility="gone"
                    android:text="Submit"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>